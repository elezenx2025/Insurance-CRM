# Insurance CRM - Production Environment Variables
# Copy this to .env.local for local development
# For Vercel: Add these in Project Settings â†’ Environment Variables

# ============================================
# Database (REQUIRED for production)
# ============================================
# PostgreSQL connection string from Vercel Postgres, Supabase, Neon, etc.
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# NextAuth (REQUIRED)
# ============================================
# Your Vercel deployment URL (e.g., https://your-app.vercel.app)
NEXTAUTH_URL="https://your-app.vercel.app"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-random-secret"

# ============================================
# JWT Authentication (REQUIRED)
# ============================================
JWT_SECRET="your-secure-random-jwt-secret"

# ============================================
# API Configuration
# ============================================
API_BASE_URL="https://your-app.vercel.app/api"

# ============================================
# Email (Optional - for notifications)
# ============================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# ============================================
# Company Settings
# ============================================
COMPANY_NAME="Insurance CRM System"
COMPANY_LOGO="/logo.svg"

# ============================================
# Optional
# ============================================
REDIS_URL="redis://localhost:6379"
OPENAI_API_KEY=""
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760
